<script>
fetch('header.html')
.then(res => res.text())
.then(data => {
    document.getElementById('header-placeholder').innerHTML = data;

    // üî• Optional: Moving strip restart if needed
    const strip = document.getElementById('movingStrip');
    if(strip){
        strip.classList.remove('start-strip');
        void strip.offsetWidth;
        strip.classList.add('start-strip');
    }
})
.catch(err => console.log('Header load error:', err));
</script>

